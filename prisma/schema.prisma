generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  email      String   @unique
  hash       String

  firstName  String?
  lastName   String?

  // Relaci贸n: un usuario tiene muchos libros
  books      Book[]

  @@map("users")
}

model Book { 
  id          Int      @id @default(autoincrement()) 
  createdAt   DateTime @default(now()) 
  updatedAt   DateTime @updatedAt

  title       String 
  author      String 
  description String?

  // Relaci贸n con User (1:N)
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  // Relaci贸n 1:1 con Bookmark
  bookmark    Bookmark?

  @@map("books")
}

model Bookmark {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  title       String
  description String?
  link        String

  // Relaci贸n 1:1 con Book
  bookId      Int  @unique
  book        Book @relation(fields: [bookId], references: [id])

  @@map("bookmarks")
}
